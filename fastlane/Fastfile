# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

default_platform(:android)

platform :android do
  desc "Runs all the tests"
  lane :test do
    gradle(task: "test")
  end

   desc "clean"
   lane :clean do
     gradle(task: "clean")
   end

    desc "Build dev"
    lane :build_dev do
      gradle(
         task: "assemble",
         build_type: "debug", #this is supposed to make debug build
       )

    end

    desc "Build release app bundle"
    lane :build_bundle do
     gradle(
        task: "assemble"
        build_type: "Release"
        properties: {
            "android.injected.signing.store.file" => "./jks/ktorcrud.jks",
            "android.injected.signing.store.password" => "ktorcrud",
            "android.injected.signing.key.alias" => "ktorcrud",
            "android.injected.signing.key.password" => "ktorcrud",
          }
      )
    end
#   desc "Submit a new Beta Build to Crashlytics Beta"
#   lane :beta do
#     gradle(task: "clean assembleRelease")
#     crashlytics
#
#     # sh "your_script.sh"
#     # You can also use other beta testing services here
#   end
#
#   desc "Deploy a new version to the Google Play"
#   lane :deploy do
#     gradle(task: "clean assembleRelease")
#     upload_to_play_store
#   end
end
